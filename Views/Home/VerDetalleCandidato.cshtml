<body>
    <h1>Detalle del Candidato</h1>

<div class="Candidato">
    <img src="@ViewBag.Candidato.Foto" class="card-img-top" alt="@ViewBag.Candidato.Nombre">
    <h5>@ViewBag.Candidato.Nombre</h5>
    <p>Apellido: @ViewBag.Candidato.Apellido</p>
    <p>Fecha de Nacimiento: @ViewBag.Candidato.FechaNacimiento.ToShortDateString()</p>
    <p>Postulaci√≥n: @ViewBag.Candidato.Postulacion</p>
</div>

<button class="enviar" type="submit"><a href='@Url.Action("VerDetallePartido", new { idPartido = ViewBag.Candidato.IdPartido })'>Volver al Partido</a></button>
</body>
</html>